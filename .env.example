# Application Environment
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost:8080

# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=straddle_scanner
DB_USER=straddle_user
DB_PASS=straddle_pass

# API Configuration
OPLAB_API_URL=https://api.oplab.com.br/v3
OPLAB_API_TIMEOUT=30

# Session Configuration
SESSION_LIFETIME=120
SESSION_ENCRYPT_COOKIES=true

# Security
APP_KEY=base64:random_key_here_32_chars
CIPHER=AES-256-CBC

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Cache
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# Email Configuration (optional)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="Covered Straddle Scanner"

# Rate Limiting
RATE_LIMIT=60